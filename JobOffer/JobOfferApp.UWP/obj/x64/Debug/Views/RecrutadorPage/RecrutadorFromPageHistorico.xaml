<Page x:ConnectionId='1'
    x:Class="JobOfferApp.UWP.Views.RecrutadorPage.RecrutadorFromPageHistorico"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JobOfferApp.UWP.Views.RecrutadorPage"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:models="using:JobOffer.Domain.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="720*"/>
            <ColumnDefinition Width="720*"/>
            <ColumnDefinition Width="38*"/>
            <ColumnDefinition Width="23*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.ColumnSpan="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text ="Vagas Recrutador" Style="{StaticResource HeaderTextBlockStyle}"/>
            <CommandBar x:ConnectionId='17' x:Name="MainCommandBar" Grid.Column="1"
                        VerticalAlignment="Center"
                        Background="Black"
                        OverflowButtonVisibility="Collapsed"
                        DefaultLabelPosition="Right">
                
            </CommandBar>
        </Grid>

        <ListView x:ConnectionId='2' Grid.Row="1"                                            Grid.RowSpan="2">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate                         >
                    <Grid x:ConnectionId='16'                     >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>

                        </Grid.RowDefinitions>
                        <StackPanel>

                            <TextBlock></TextBlock>
                            <TextBlock Text="Id:"
                                       TextWrapping="NoWrap"
                                       Style="{StaticResource TitleTextBlockStyle}" />

                            <TextBlock Text="Tipo:"
                                       TextWrapping="NoWrap"
                                       Style="{StaticResource TitleTextBlockStyle}" />

                            <TextBlock Text="Regime:"
                                       TextWrapping="NoWrap"
                                       Style="{StaticResource TitleTextBlockStyle}" />

                            <TextBlock Text="Horario:"
                                       TextWrapping="NoWrap"
                                       Style="{StaticResource TitleTextBlockStyle}" />

                            <TextBlock Text="Tipo de Contrato:"
                                       TextWrapping="NoWrap"
                                       Style="{StaticResource TitleTextBlockStyle}" />

                            <TextBlock Text="Numero de Vagas:"
                                       TextWrapping="NoWrap"
                                       Style="{StaticResource TitleTextBlockStyle}" />

                            <TextBlock Text="Recrutador Id:"
                                       TextWrapping="NoWrap"
                                       Style="{StaticResource TitleTextBlockStyle}" />

                            <TextBlock Text="Estado:"
                                       TextWrapping="NoWrap"
                                       Style="{StaticResource TitleTextBlockStyle}" />

                            <TextBlock Text="Cargo:"
                                       TextWrapping="NoWrap"
                                       Style="{StaticResource TitleTextBlockStyle}" />

                        </StackPanel>



                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ListView x:ConnectionId='3' Grid.Column="1" Grid.Row="1"                                            Grid.RowSpan="2">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate                         >
                    <Grid x:ConnectionId='5'                       >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>

                            <TextBlock></TextBlock>
                            <TextBlock x:ConnectionId='6'                   
                               Style="{StaticResource TitleTextBlockStyle}"/>

                            <TextBlock x:ConnectionId='7'                     
                               Style="{StaticResource TitleTextBlockStyle}"/>

                            <TextBlock x:ConnectionId='8'                       
                               Style="{StaticResource TitleTextBlockStyle}"/>

                            <TextBlock x:ConnectionId='9'                        
                               Style="{StaticResource TitleTextBlockStyle}"/>

                            <TextBlock x:ConnectionId='10'                              
                               Style="{StaticResource TitleTextBlockStyle}"/>

                            <TextBlock x:ConnectionId='11'                       
                               Style="{StaticResource TitleTextBlockStyle}"/>

                            <TextBlock x:ConnectionId='12'                             
                               Style="{StaticResource TitleTextBlockStyle}"/>

                            <TextBlock x:ConnectionId='13'                         
                               Style="{StaticResource TitleTextBlockStyle}"/>

                            <TextBlock x:ConnectionId='14'                        
                               Style="{StaticResource TitleTextBlockStyle}"/>


                        </StackPanel>

                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

